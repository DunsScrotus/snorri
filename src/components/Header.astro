---
import Navigation from './Navigation.astro';
---
<header>
	<div class="nav-logo">
		<img src="/images/logo-snorri-of-the-stars.png" alt="Snorri of the Stars logo - Bunny in watercolor" width="80px" height="80px">
		<a href="/" class="logo">
			Snorri of the Stars
		</a>
	</div>
	<nav class="nav-links">
		<Navigation />
  	</nav>
</header>

<style>
	header {
		padding: 1rem 1rem;
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 1rem;
		max-width: 1400px;
		margin: 0 auto;
	}
	.nav-logo{
		display: flex;
		flex-direction: column;
		align-items: center;
	}
	.nav-logo img{
		width: 5rem;
		height: auto;
		margin-bottom: .3rem;
	}
	.nav-links {
		display: flex;
		flex-wrap: wrap;
		align-items: center;
		justify-content: center;
		gap: .75em;
		> a {
			color: var(--color-foreground);
			text-decoration: none;
			padding: 0.3rem .6rem;
			border: 1px dotted var(--color-foreground);
			transition: background-color 0.05s;
			&:hover{
				border: 1px solid var(--color-foreground);
			}
			&.active{
				background-color: #F8E8AD;
			}
		}
</style>
